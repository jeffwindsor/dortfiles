  alias da="yadm add"
  alias daa="yadm add -u" #stage modified and deletions
  alias dg="cd && yadm enter lazygit && cd -"
  alias ds="yadm status -sb --ignore-submodules"
  alias dpl="yadm pull"
  alias ya="yadm add"
  alias yaa="yadm add -u" #stage modified and deletions
